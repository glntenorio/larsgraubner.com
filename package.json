{
  "name": "larsgraubner-blog",
  "description": "Personal blog from Lars Graubner",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgraubner/larsgraubner.com.git"
  },
  "author": "Lars Graubner <mail@larsgraubner.de>",
  "license": "MIT",
  "dependencies": {
    "@graubnla/helpers": "^3.0.0",
    "headroom.js": "^0.9.4",
    "highlight.js": "^9.12.0",
    "interactive": "^0.1.9",
    "lodash.foreach": "4.5.0",
    "lodash.range": "^3.2.0",
    "normalize.css": "^7.0.0",
    "prismjs": "^1.6.0",
    "twemoji": "^2.3.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.22.0",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-minifier": "^3.5.2",
    "husky": "^0.14.3",
    "image-webpack-loader": "^3.3.1",
    "lint-staged": "^4.0.1",
    "node-sass": "^4.5.2",
    "optimize-css-assets-webpack-plugin": "^2.0.0",
    "postcss-loader": "^2.0.5",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.2",
    "sw-precache-webpack-plugin": "^0.11.4",
    "url-loader": "^0.5.7",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "dev": "concurrently \"hugo --watch --buildDrafts\" \"cross-env NODE_ENV=development webpack-dev-server --config webpack.dev.js\"",
    "clean": "rimraf public",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack --config webpack.prod.js --progress && hugo",
    "postbuild": "html-minifier -c htmlminifier.json --input-dir=public --output-dir=public --file-ext=html",
    "predeploy": "npm run build",
    "deploy": "rsync -rvz --delete public/ root@larsgraubner.de:/var/www/larsgraubner.com/public/"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ],
    "*.scss": [
      "prettier --parser=postcss --write",
      "git add"
    ]
  }
}
