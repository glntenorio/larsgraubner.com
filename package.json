  "dependencies": {
    "headroom.js": "0.9.3",
    "lodash.foreach": "4.5.0",
    "lodash.range": "^3.2.0",
    "normalize.css": "^7.0.0",
    "prismjs": "^1.6.0",
    "twemoji": "^2.2.5"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.0.1",
    "babel-core": "^6.23.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.22.0",
    "concurrently": "^3.4.0",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.0",
    "cssnano": "^3.10.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-config-prettier": "^2.0.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.3",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "husky": "^0.13.2",
    "image-webpack-loader": "^3.3.1",
    "lint-staged": "^3.3.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "optimize-css-assets-webpack-plugin": "^1.3.1",
    "postcss-loader": "^2.0.5",
    "prettier": "^1.2.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.17.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.4.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint \"src/js/**\"",
    "dev": "concurrently \"hugo --watch --buildDrafts\" \"cross-env NODE_ENV=development node server.js\"",
    "clean": "rimraf public",
    "build:hugo": "hugo",
    "build:assets": "cross-env NODE_ENV=production webpack --config webpack.prod.js --progress",
    "build": "npm-run-all lint clean build:*",
    "copy": "rsync -avz --delete public/ root@larsgraubner.de:/srv/www/larsgraubner.de",
    "deploy": "npm-run-all build copy"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  }
}
