    "lint": "eslint --ext .js --ignore-pattern public .",
    "flow": "flow",
    "format": "prettier --write 'src/**/*.js'",
    "build": "gatsby build",
    "create-post": "node create-post.js",
    "precommit": "lint-staged"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {},
    "globals": {
      "graphql": false,
      "__PATH_PREFIX__": false,
      "__PREFIX_PATHS__": false
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
