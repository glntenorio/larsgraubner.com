{
  "name": "larsgraubner.com",
  "description": "Personal blog",
  "version": "1.0.0",
  "author": "Lars Graubner <mail@larsgraubner.de>",
  "dependencies": {
    "date-fns": "1.29.0",
    "gatsby": "1.9.239",
    "gatsby-image": "1.0.42",
    "gatsby-link": "1.6.39",
    "gatsby-plugin-feed": "1.3.20",
    "gatsby-plugin-google-analytics": "1.0.24",
    "gatsby-plugin-manifest": "1.0.15",
    "gatsby-plugin-netlify": "1.0.19",
    "gatsby-plugin-offline": "1.0.15",
    "gatsby-plugin-react-helmet": "2.0.8",
    "gatsby-plugin-react-next": "1.0.11",
    "gatsby-plugin-sharp": "1.6.41",
    "gatsby-plugin-sitemap": "1.2.19",
    "gatsby-plugin-styled-components": "2.0.9",
    "gatsby-remark-copy-linked-files": "1.5.30",
    "gatsby-remark-images": "1.5.56",
    "gatsby-remark-prismjs": "1.2.20",
    "gatsby-remark-responsive-iframe": "1.4.18",
    "gatsby-remark-smartypants": "1.4.12",
    "gatsby-source-filesystem": "1.5.27",
    "gatsby-transformer-remark": "1.7.37",
    "gatsby-transformer-sharp": "1.6.22",
    "husky": "0.14.3",
    "lint-staged": "7.0.0",
    "lodash": "4.17.5",
    "polished": "1.9.2",
    "prism-themes": "1.0.0",
    "prismjs": "1.13.0",
    "react": "16.2.0",
    "react-helmet": "5.2.0",
    "styled-components": "3.2.3"
  },
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "eslint": "4.19.1",
    "eslint-config-react-app": "2.1.0",
    "eslint-loader": "2.0.0",
    "eslint-plugin-flowtype": "2.46.1",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.7.0",
    "flow-bin": "0.68.0",
    "mri": "1.1.0",
    "prettier": "1.11.1",
    "slugify": "1.2.9"
  },
  "homepage": "https://larsgraubner.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lgraubner/larsgraubner.com.git"
  },
  "scripts": {
    "dev": "gatsby develop",
    "lint": "eslint --ext .js --ignore-pattern public src",
    "flow": "flow",
    "build": "gatsby build",
    "serve": "npm run build && gatsby serve",
    "create-post": "node create-post.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "graphql": false,
      "__PATH_PREFIX__": false,
      "__PREFIX_PATHS__": false
    },
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "specialLink": [
            "to"
          ]
        }
      ]
    }
  }
}
